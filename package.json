{
  "name": "sociogram",
  "version": "0.1.0",
  "description": "A simple tool to handle your organization's relationships",
  "main": "main.js",
  "scripts": {
	"start": "electron .",
    "check-coverage": "istanbul check-coverage --statements 100 --lines 100 --functions 100 --branches 100",
	"report-coverage": "bash <(curl -s https://codecov.io/bash)",
    "test": "mocha tests --recursive --watch ./tests",
	"test:nyan": "mocha tests -R nyan --recusive --watch ./tests/*",
    "test:single": "istanbul cover -x tests/ _mocha -- -R spec --recursive ./tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blorente/sociogram.git"
  },
  "author": "Borja Lorente",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blorente/sociogram/issues"
  },
  "homepage": "https://github.com/blorente/sociogram#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "codecov.io": "^0.1.6",
    "electron": "^1.3.4",
    "ghooks": "^1.3.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  }
}
